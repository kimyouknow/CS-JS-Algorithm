{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["utils/*"],
      "@datastructure/*": ["datastructure/*"],
      "@algorithm/*": ["algorithm/*"],
      "@boj/*": ["boj/*"],
      "@pgs/*": ["pgs/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": ["."]
}
